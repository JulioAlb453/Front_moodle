<div class="card">
    <div class="card-header">
        <h3>Resultados de Operaciones</h3>
        <button class="btn btn-sm btn-secondary" onclick="clearResults()">Limpiar</button>
    </div>
    
    <div class="results-container">
        {{#operations}}
        <div class="thread-status {{status}}">
            <div class="thread-info">
                <strong>{{operation}}</strong>
                <span class="thread-message">{{message}}</span>
                {{#progress}}
                <div class="thread-progress">
                    <div class="thread-progress-bar" style="width: {{progress}}%"></div>
                </div>
                {{/progress}}
            </div>
            <div class="thread-status-badge">
                {{#success}}✅{{/success}}
                {{#error}}❌{{/error}}
                {{#running}}⏳{{/running}}
            </div>
        </div>
        {{/operations}}
    </div>
</div>