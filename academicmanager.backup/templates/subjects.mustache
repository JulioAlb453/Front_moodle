<div class="card">
    <div class="card-header">
        <h3>Asignaturas - {{program_name}} - Cuatrimestre {{semester}}</h3>
    </div>
    
    <div class="subjects-grid">
        {{#subjects}}
        <div class="subject-card" data-subject-id="{{id}}">
            <h4>{{nombre}}</h4>
            <div class="subject-info">
                <p><strong>Grupo:</strong> {{grupo_nombre}}</p>
                <p><strong>Docente:</strong> {{docente_nombre}}</p>
                <p><strong>Alumnos:</strong> {{alumnos_count}}/25</p>
            </div>
            
            <div class="subject-actions">
                <button class="btn btn-sm btn-primary" onclick="checkCourse('{{id}}')">
                    Verificar Curso
                </button>
                <button class="btn btn-sm btn-success" onclick="createCourse('{{id}}')">
                    Crear Curso
                </button>
            </div>
        </div>
        {{/subjects}}
    </div>
</div>