<div class="academic-manager-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-cogs me-2"></i>
            Panel de Administración
        </h2>
        <button class="btn btn-outline-secondary" id="backToMainBtn">
            <i class="fas fa-arrow-left me-2"></i>Volver al Inicio
        </button>
    </div>

    <!-- Pestañas de Administración -->
    <ul class="nav nav-tabs mb-4" id="adminTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="programs-tab" data-bs-toggle="tab" 
                    data-bs-target="#programs" type="button" role="tab">
                <i class="fas fa-graduation-cap me-2"></i>Programas
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="subjects-tab" data-bs-toggle="tab" 
                    data-bs-target="#subjects" type="button" role="tab">
                <i class="fas fa-book me-2"></i>Asignaturas
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="teachers-tab" data-bs-toggle="tab" 
                    data-bs-target="#teachers" type="button" role="tab">
                <i class="fas fa-chalkboard-teacher me-2"></i>Docentes
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="students-tab" data-bs-toggle="tab" 
                    data-bs-target="#students" type="button" role="tab">
                <i class="fas fa-users me-2"></i>Estudiantes
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="groups-tab" data-bs-toggle="tab" 
                    data-bs-target="#groups" type="button" role="tab">
                <i class="fas fa-layer-group me-2"></i>Grupos
            </button>
        </li>
    </ul>

    <!-- Contenido de Pestañas -->
    <div class="tab-content" id="adminTabsContent">
        
        <!-- Pestaña Programas -->
        <div class="tab-pane fade show active" id="programs" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Gestión de Programas de Estudio</h5>
                    <button class="btn btn-success btn-sm" id="addProgramBtn">
                        <i class="fas fa-plus me-1"></i>Nuevo Programa
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Cuatrimestres</th>
                                    <th>Asignaturas</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="programsTable">
                                <!-- Datos cargados dinámicamente -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pestaña Asignaturas -->
        <div class="tab-pane fade" id="subjects" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Gestión de Asignaturas</h5>
                    <button class="btn btn-success btn-sm" id="addSubjectBtn">
                        <i class="fas fa-plus me-1"></i>Nueva Asignatura
                    </button>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <select class="form-select" id="subjectProgramFilter">
                                <option value="">Todos los programas</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" id="subjectSemesterFilter">
                                <option value="">Todos los cuatrimestres</option>
                            </select>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Cuatrimestre</th>
                                    <th>Programa</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="subjectsTable">
                                <!-- Datos cargados dinámicamente -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formularios Modales (simplificado) -->
        <div class="modal fade" id="adminModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">Modal Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" id="modalBody">
                        <!-- Contenido dinámico del formulario -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>