<div class="academic-manager-container">
    <!-- Header con Navegación -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary">
                <i class="fas fa-book me-2"></i>
                {{#str}}subjects_semester, local_academicmanager{{/str}}: {{semester}}°
            </h2>
            <p class="text-muted">Programa: <strong>{{program_name}}</strong></p>
        </div>
        <button class="btn btn-outline-secondary" id="backBtn">
            <i class="fas fa-arrow-left me-2"></i>
            {{#str}}back, local_academicmanager{{/str}}
        </button>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control" id="searchInput" 
                               placeholder="Buscar materia...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="teacherFilter">
                        <option value="">Todos los docentes</option>
                        {{#teachers}}
                        <option value="{{id}}">{{name}}</option>
                        {{/teachers}}
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="groupFilter">
                        <option value="">Todos los grupos</option>
                        <option value="A">Grupo A</option>
                        <option value="B">Grupo B</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Contador y Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>{{total_subjects}}</h4>
                    <small>Total Materias</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>{{total_groups}}</h4>
                    <small>Total Grupos</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h4>{{total_teachers}}</h4>
                    <small>Docentes Activos</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>{{total_students}}</h4>
                    <small>Estudiantes</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Materias -->
    <div class="row" id="subjectsContainer">
        {{#subjects}}
        <div class="col-md-6 col-lg-4 mb-4 subject-card" data-subject-id="{{id}}">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 text-truncate">{{name}}</h6>
                    <span class="badge bg-primary">{{groups.length}} grupos</span>
                </div>
                <div class="card-body">
                    <!-- Información del Docente -->
                    <div class="mb-3">
                        <small class="text-muted fw-bold">
                            <i class="fas fa-chalkboard-teacher me-1"></i>DOCENTE:
                        </small>
                        <p class="mb-1">{{teacher.name}}</p>
                        <div class="teacher-status">
                            {{#teacher.exists_in_moodle}}
                            <span class="badge bg-success">Usuario existe</span>
                            {{/teacher.exists_in_moodle}}
                            {{^teacher.exists_in_moodle}}
                            <span class="badge bg-warning">Usuario no existe</span>
                            {{/teacher.exists_in_moodle}}
                        </div>
                    </div>

                    <!-- Grupos -->
                    <div class="mb-3">
                        <small class="text-muted fw-bold">
                            <i class="fas fa-layer-group me-1"></i>GRUPOS:
                        </small>
                        {{#groups}}
                        <div class="group-item d-flex justify-content-between align-items-center mt-2 p-2 bg-light rounded">
                            <div>
                                <strong>{{name}}</strong>
                                <br>
                                <small class="text-muted">{{students}} alumnos</small>
                            </div>
                            <div class="group-actions">
                                {{#exists_in_moodle}}
                                <span class="badge bg-success">Curso existe</span>
                                {{/exists_in_moodle}}
                                {{^exists_in_moodle}}
                                <span class="badge bg-warning">Curso no existe</span>
                                {{/exists_in_moodle}}
                            </div>
                        </div>
                        {{/groups}}
                    </div>

                    <!-- Botones de Acción Concurrentes -->
                    <div class="btn-group-vertical w-100" role="group">
                        <!-- Verificaciones -->
                        <button class="btn btn-outline-primary btn-sm mb-2 concurrent-btn" 
                                data-action="check_course" data-subject-id="{{id}}">
                            <i class="fas fa-search me-1"></i>
                            Verificar Curso Moodle
                        </button>
                        
                        <button class="btn btn-outline-info btn-sm mb-2 concurrent-btn" 
                                data-action="check_teacher" data-teacher-id="{{teacher.id}}">
                            <i class="fas fa-user-check me-1"></i>
                            Verificar Docente
                        </button>

                        <!-- Creaciones -->
                        <button class="btn btn-outline-success btn-sm mb-2 concurrent-btn" 
                                data-action="create_course" data-subject-id="{{id}}">
                            <i class="fas fa-plus me-1"></i>
                            Crear Curso Moodle
                        </button>
                        
                        <button class="btn btn-outline-warning btn-sm mb-2 concurrent-btn" 
                                data-action="create_teacher" data-teacher-id="{{teacher.id}}">
                            <i class="fas fa-user-plus me-1"></i>
                            Crear Usuario Docente
                        </button>

                        <!-- Matriculación Masiva -->
                        <button class="btn btn-outline-dark btn-sm enroll-btn" 
                                data-subject-id="{{id}}" data-groups='{{groups_json}}'>
                            <i class="fas fa-users me-1"></i>
                            Matricular Estudiantes
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {{/subjects}}
    </div>

    <!-- Panel de Progreso de Operaciones Concurrentes -->
    <div class="card mt-4" id="concurrentOperationsPanel" style="display: none;">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-tasks me-2"></i>
                Operaciones Concurrentes en Progreso
            </h5>
        </div>
        <div class="card-body">
            <div id="operationsProgress"></div>
        </div>
    </div>
</div>