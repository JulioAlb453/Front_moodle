<div class="card">
    <div class="card-header">
        <h3>Asignaturas - {{program_name}} - Cuatrimestre {{semester}}</h3>
    </div>
    <div class="card-body">
        {{#subjects.length}}
        <table class="table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Créditos</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#subjects}}
                <tr>
                    <td>{{codigo}}</td>
                    <td>{{nombre}}</td>
                    <td>{{creditos}}</td>
                    <td>
                        <span class="badge {{#activo}}badge-success{{/activo}}{{^activo}}badge-secondary{{/activo}}">
                            {{#activo}}Activo{{/activo}}{{^activo}}Inactivo{{/activo}}
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-primary" data-action="edit-subject" data-id="{{id}}">Editar</button>
                        <button class="btn btn-sm btn-danger" data-action="delete-subject" data-id="{{id}}">Eliminar</button>
                    </td>
                </tr>
                {{/subjects}}
            </tbody>
        </table>
        {{/subjects.length}}
        {{^subjects.length}}
        <div class="alert alert-info">
            No hay asignaturas registradas para esta combinación.
        </div>
        {{/subjects.length}}
    </div>
</div>